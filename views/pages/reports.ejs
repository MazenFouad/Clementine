<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp" />
  <link rel="stylesheet" href="/css/editcustdash.css">
  <link rel="stylesheet" href="/css/dashboard.css">
  <link rel="stylesheet" href="/css/displayproducts.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


  <title>Reports</title>

  
</head>

<body>
  <div class="container">
    <%- include('../partials/dashboardsidebar', { currentPage: 'reports' }) %>
    <div class="content">
        <main class="table">
            <section class="table_header">
              <h1>Reports and Reviews: </h1>
              
            </section>
            <section class="testimonials">
              <% if (reviews && reviews.length > 0) { %>
                <% reviews.forEach(review => { %>
                  <div class="testimonial">
                    <div class="content">
                      <h4><%= review.email %></h4>
                      <p class="rev_id">Reviewing: <%= review.productName %></p>
            
                      <p class="rev">Review: <%= review.review %></p>
            
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <p>No reviews found.</p>
              <% } %>
            </section>
          </main>
    </div>
  </div>
  <script src="/js/editcustdash.js"></script>
  <script src="/js/dashsearch.js"></script>
  <script src="/js/validation.js"></script>
</body>

</html>
