<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp" />
  <link rel="stylesheet" href="/css/editcustdash.css">
  <link rel="stylesheet" href="/css/dashboard.css">
  <link rel="stylesheet" href="/css/displayproducts.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <title>Reports</title>
</head>

<body>
  <div class="container">
    <%- include('../partials/dashboardsidebar', { currentPage: 'reports' }) %>
    <div class="content">
      <main class="table">
        <section class="table_header">
          <h1>Reports</h1>
          <div class="search_orders">
            <input type="search" placeholder="Search reports...">
          </div>
        </section>
        <section class="table_body">
          <table>
            <thead>
              <tr>
                <th>Email</th>
                <th>Summary</th>
                <th>Review</th>
                <th>Product ID</th>
                <th>Timestamp</th>
              </tr>
            </thead>
            <tbody>
              <% if (reviews && reviews.length > 0) { %>
              <% reviews.forEach(review => { %>
              <tr>
                <td><%= review.email %></td>
                <td><%= review.summary %></td>
                <td><%= review.review %></td>
                <td><%= review.productId %></td>
                <td><%= review.createdAt %></td>
              </tr>
              <% }) %>
              <% } else { %>
              <tr>
                <td colspan="5">No reviews found.</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </section>
      </main>
    </div>
  </div>
  <script src="/js/editcustdash.js"></script>
  <script src="/js/dashsearch.js"></script>
  <script src="/js/validation.js"></script>
</body>

</html>
