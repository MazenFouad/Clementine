<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- material icons cdn -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp" />
    <link rel="stylesheet" href="/css/editcustdash.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/editproducts.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Admin Dashboard</title>
</head>




<body>


    <div class="container">

        <%- include('../partials/dashboardsidebar', { currentPage: 'ordersdash' }) %>



        <main>
            <h1>Update Order</h1>
            <div id="products-container">
                <div class="addcust" id="addcust">
                    <form method="POST" action="/ordersdash/<%= order._id %>/update">
                        
                        <div class="input-group">
                            <h2 class="add-title" style="font-size: 25px;">You're updating order number: <%= order._id %></h2>
                            <% if (order.userFullName) { %>
                                <h1 class="add-title" style="font-size: 15px;">Ordered by: <%= order.userFullName %></h1>
               

                              <% } else { %>
                                <h4 class="add-title">Ordered by: N/A</h4>
                              <% } %>

                        <div class="input-group">
                            <label for="status">Status</label>
                            <input type="text" id="status" name="status" value="<%= order.status %>" >
                        </div>

                        <div class="input-group">
                            <label for="shippingAddress1">Shipping Address</label>
                            <input type="text" id="shippingAddress1" name="shippingAddress1" value="<%= order.shippingAddress1 %>">
                        </div>

                        <div class="input-group">
                            <label for="status">City</label>
                            <input type="text" id="city" name="city" value="<%= order.city %>">
                        </div>

                        <h1 class="add-title" style="font-size: 15px;">Order Items:</h1>
                        <ul>
                            <% order.orderItems.forEach(function(item) { %>
                                <li><%= item.name %></li>
                              <% }); %>
                        </ul>
                        <input type="submit" id="update" class="update-btn" value="Update"></button>
                        <button id="cancel" href="/ordersdash" id="cancel" class="delete-btn">Cancel</button>

                        </form>
                    <script src="/js/validation.js"></script>

                </div>


 
              
                <script src="/js/editcustdash.js"></script>
                <script src="/js/dashsearch.js"></script>
                <script src="/js/validation.js"></script>

</body>

</html>