                <a href=""><span class="material-symbols-sharp">logout</span>
                    <h3>Logout</h3>
                </a>

            </div>
        </aside>
        <!-- sidebar end -->




        <main>
            <h1>Customers</h1>
            <div id="customers-container">
                <div class="addcust" id="addcust">
                    <form class="form">
                    <div class="add">
                        <h2 class="add-title">Add A Customer</h2>
                    </div>
                    <div class="customers-container" style="display: block;">
                        
                        <div class="input-group">
                        <label for="email">Email</label>
                        <div><input id="custemail" type="email" placeholder="Customer's Email" name="email" >
                        </div>
                        <span class="errormsg"></span>
                        </div>
                        
                        <div class="input-group">
                        <label for="pass">Password</label>
                        <div> <input id="password" type="password" placeholder="Customer's Password" name="psw">                       
                        </div>
                        <span class="errormsg"></span>
                        </div>
        
                        <div class="input-group">
                        <label for="pass">Password Confirmation</label>
                        <div><input id="passconf" type="password" placeholder="Confirm Password" name="psw">
                        </div>
                        <span class="errormsg"></span>
                        </div>

                        <button type="add" id="add">Add</button><span><button id="cancel" href="editcustdash.ejs">Cancel</button></span>
                        
                    </div>
                    </form>
                </div>

            
                <div id="update-msg">
                    <span>Customer Updated Successfully.</span>
                 </div>




             

