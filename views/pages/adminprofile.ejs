<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- material icons cdn -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp" />
    <link rel="stylesheet" href="/css/editcustdash.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>Admin Profile</title>
</head>

<body>

    <div class="container">
        <%- include('../partials/dashboardsidebar', { currentPage: 'settings' }) %>




            <main>

                <h1>Admin Profile</h1>

                <div id="products-container">
                    <div class="addcust" id="addcust">
                        <form class="form" action="/adminprofile" method="POST">
                            <div class=" add">
                                <h2 class="add-title">Settings</h2>
                            </div>
                            <div class="products-container" style="display: block;">

                                <div class="input-group">
                                    <label for="email">Email</label>
                                    <input type="email" id="email" name="email" value="<%= admin.email %>" required>
                                </div>
                                
                                <div class="input-group">
                                    <label for="password">Password</label>
                                    <input type="password" id="password" name="password" value="<%= admin.password %>" required>
                                </div>
                                <span id="passlabel"></span>
                                
                                <div class="input-group">
                                    <label for="confirmpass">Confirm password</label>
                                    <input id="confirmpass" type="password" placeholder="Confirm password" name="confirmpass" required>
                                </div>
                                
                                <div class="input-group">
                                    <label for="phone">Phone</label>
                                    <input type="tel" id="phone" name="phone" value="<%= admin.phone %>">
                                </div>
                                <span id="phonelabel"></span>
                                <input type="submit" id="update" class="update-btn" value="Update"></button>
                                <button id="cancel" href="/editcustdash" id="cancel" class="delete-btn">Cancel</button>
                                </form>
                            <script src="/js/validation.js"></script>
        
                        </div>
        
        
        
                      
                        <script src="/js/editcustdash.js"></script>
                        <script src="/js/dashsearch.js"></script>
                        <script src="/js/validation.js"></script>
</body>