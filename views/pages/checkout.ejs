<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/chechkout.css">
    <link rel="stylesheet" type="text/css" href="/css/Signup.css">
	<link rel="stylesheet" type="text/css" href="/css/style.css">
    <title>Clementine</title>
</head>
<body>
     <%- include('../partials/navbar') %>

        <% if(totalamount == undefined){ %>
            <h1 class="notfound">No items found.</h1>
            <% } else { %>
                <section id="totalAmountReveal" >
                    Total amount:
    
    EGP  <%=  totalamount %> 
    <div id="ship">Including shipping</div>
     </section>
    
                <section id="checkout-container">
                    <h2>Billing Address </h2>
                    <form action="/checkout" method="POST" class="checkoutform" id="checkoutform">
        
                         <div class="textfield"> 
                             <input type="text" name="userFullName" id="firstname">
                              <label for="firstname" id="firstnamelabel"></label>
                             <img src="./Images/right.png" alt="" width="15px" height="15px" class="true">
                             <img src="./Images/wrongg.png" alt="" width="15px" height="15px" class="false">
                             <span class="sp1"></span>
                             <label for=""> Full Name</label> 
                         </div>
                         
                         <div class="textfield"> 
                             <input type="text" name="email" id="email" >  
                             <label for="email" id="emaillabel"></label>
                             <img src="./Images/right.png" alt="" width="15px" height="15px" class="true">
                             <img src="./Images/wrongg.png" alt="" width="15px" height="15px" class="false">
                             <span class="sp1"></span>          
                             <label for="">E-mail</label>      
                         </div>
                         <div class="textfield"> 
                             <input type="text" name="shippingAddress1" id="address" >
                             <label for="address" id="addlabel"></label>
                             <span class="sp1"></span>
                             <label for="">Address</label>      
                         </div>
                         <div class="textfield" >  
                            <input type="text" name="city" id="city" >
                            <label for="city" id="citylabel"></label>
                            <span class="sp1"></span> 
                            <label for="">City</label>
                        </div>
             
                           
                        <div id="zip">
                            <label>
                                <h4>State</h4>
                                <select id="statetype" name="state"> 
                                    <option value="selectstate">Choose State..</option>
                                    <option>Cairo</option>
                                    <option>Giza</option>
                                    <option>Alexandria</option>
                                    <option>Sinai</option>
                                </select>
                                <div class="textfield" >  
                                    <input type="zipcode" name="zip" id="zipcode" >
                                    <label for="zipcode" id="ziplabel"></label>
                                    <span class="sp1"></span>
                                     <label for="">Zip Code</label>
                                </div>
                            </label> 
                        </div>
    
                        <div class="right">
                            <h2>PAYMENT</h2>
                               <h4 class="accepted">Accepted Cards</h4>  <br>
                                <img src="Images/card1.png" width="100">
                                <img src="Images/card2.png" width="50">
                                <br><br>
        
        
                                <div class="textfield" >  
                                    <input type="text" name="card" id="card" >
                                    <label for="card" id="cardlabel"></label>
                                    <span class="sp1"></span>
                                    <label for="">Credit Card Number</label>
                                </div>
        
                                <div class="textfield" >  
                                    <input type="text" name="exp_month" id="cardexp" >
                                    <label for="cardexp" id="cardexlabel"></label>
                                    <span class="sp1"></span>
                                    <label for="">Expiry Month</label>
                                </div>
                                    
                                    <div id="zip">
                                        <label>
                                            <h4>Exp year</h4>
                                            <select id="expyeardate" name="exp_year">
                                                <option value="selectyear">Choose Year..</option>
                                                <option>2024</option>
                                                <option>2025</option>
                                                <option>2026</option>
                                                <option>2027</option>
                                            </select>
                                        </label>
        
                                        <div class="textfield" >  
                                            <input type="text" name="cvv" id="cardcvv" >
                                            <label for="caedcvv" id="cardcvvlabel"></label>
                                            <span class="sp1"></span>
                                            <label for="">CVV</label>
                                        </div>
                                            
                                    </div>
                                    <label>
                                        <input type="checkbox" checked="checked"  class="sameadr" name="sameadr"> Shipping address same as billing
                                      </label>
                                      <input type="submit" class="submit" value="Place Order" class="place-order"><a class="place-link" href="/index">Place Order</a></button>
                                 </div>
                        </div>
                        
                    </form>
               <% } %>
                    <script src="/js/checkout.js"></script>
                    <script src="/js/trial.js"></script>
                    <script src="/js/cart.js"></script>
    
                </section>
        
                <%- include('../partials/footer') %>

</body>
</html>