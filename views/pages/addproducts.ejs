<!DOCTYPE html>
 <lang="en">

<head>
    
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- material icons cdn -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp" />
    <link rel="stylesheet" href="/css/editcustdash.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Admin Dashboard</title>
</head>




<body>


    <div class="container">

        <!-- sidebar start -->
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="./Images/logoo copy.png" alt="logo">
                </div>
                <div class="close" id="close-btn">
                    <span class="material-symbols-sharp">close</span>
                </div>
            </div>
            <div class="sidebar">
                <a href="dashboard"><span class="material-symbols-sharp">dashboard</span>
                    <h3>Dashboard</h3>
                </a>
                <a href="editcustdash"><span class="material-symbols-sharp">person</span>
                    <h3>Customers</h3>
                </a>
                <a href="orders"><span class="material-symbols-sharp">receipt_long</span>
                    <h3>Orders</h3>
                </a>
                <a href=""><span class="material-symbols-sharp">insights</span>
                    <h3>Analytics</h3>
                </a>
                <a href=""><span class="material-symbols-sharp">chat</span>
                    <h3>Chat</h3><span class="message-count">3</span>
                </a>
                <a href="addproducts"  class="active"><span class="material-symbols-sharp">inventory</span>
                    <h3>Products</h3>
                </a>
                <a href=""><span class="material-symbols-sharp">report</span>
                    <h3>Reports</h3>
                </a>
                <a href=""><span class="material-symbols-sharp">Settings</span>
                    <h3>Settings</h3>
                </a>
                
                <a href=""><span class="material-symbols-sharp">logout</span>
                    <h3>Logout</h3>
                </a>

            </div>
        </aside>
        <!-- sidebar end -->




        <main>
            <h1>Jewelry</h1>
            <div id="products-container">
                <div class="addcust" id="addcust">
                    <form class="form" action="/addproducts" method="post"  >
                    <div class="add">
                        <h2 class="add-title">Add A Product</h2>
                    </div>
                    <div class="products-container" style="display: block;">
                        
                        <div class="input-group">
                        <label for="email">Product ID</label>
                        <div><input id="custemail" type="text" placeholder="Product id" name="id" >
                        </div>
                        <span class="errormsg"></span>
                        </div>
                        
                        <div class="input-group">
                        <label for="pass">Product Name </label>
                        <div> <input id="password" type="text" placeholder="Product name" name="name">                       
                        </div>
                        <span class="errormsg"></span>
                        </div>
                        
                        <div class="input-group">
                            <label for="pass">Product Image</label>
                          <div>
                            <label class="add-photo-btn">Upload Image<span>
                                <input type="file" id="myfile" name="image"></span>
                            </label>
                        </div>
                            <span class="errormsg"></span>
                            </div>

                        <div class="input-group">
                        <label for="pass">Product Price</label>
                        <div><input id="passconf" type="text" placeholder="Prodct price" name="price">
                        </div>
                        <span class="errormsg"></span>
                        </div>
                       

                        <div class="input-group">
                            <label for="pass">Product Description</label>
                            <div><input id="passconf" type="text" placeholder="Prodct Description" name="description" class="description">
                            </div>
                            <span class="errormsg"></span>
                            </div>

                            <div class="input-group">
                                <label for="pass">Material</label>
                                <div><input id="passconf" type="text" placeholder="Product Material" name="material" >
                                </div>
                                <span class="errormsg"></span>
                            </div>

                            <div class="input-group">
                                <label for="pass">Category</label>
                                <div><input id="passconf" type="text" placeholder="Product category" name="category" >
                                </div>
                                <span class="errormsg"></span>
                            </div>

                            <div class="input-group">
                                <label for="pass">Count in Stock</label>
                                <div><input id="passconf" type="text" placeholder="count in stock" name="countInStock" >
                                </div>
                                <span class="errormsg"></span>
                            </div>

    


                        <button type="add" id="add">Add</button><span>
                        <button id="cancel" href="/addproducts">Cancel</button></span>
                        <button id="view" href="/displayproducts">View Products</button></span>

                    </div>
                    </form>
                </div>


                
              
             

    <script src="js/orders.js"></script>

</body>

</html>


